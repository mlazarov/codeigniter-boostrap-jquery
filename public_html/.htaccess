
AddDefaultCharset utf-8

RewriteEngine on
RewriteBase /

RewriteCond %{HTTP_HOST} !^bgreporter.net$ 		[NC]
RewriteCond %{HTTP_HOST} !^bgreporter.dev$ 		[NC]
RewriteRule ^(.*)$ http://bgreporter.net/$1 		[R=301,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ 												index.php?/$1 [L]
